@model HomeModelBindingViewModel
@{
    ViewData["Title"] = "Model binding demo";
}

<h1>@ViewData["Title"]</h1>
<div>
    Enter values for your thing in the form:
</div>
<form method="post" action="/home/modelbinding/2?id=2"> @* Zie hier form parameter gaat voor route en query parameter! *@
    <input name="id" value="1" />
    <input name="color" value="Red" />
    <input name="email" value="test@axample.com" />
    <input type="submit" />
</form>
@if (Model is not null)
{
    <h2>Submitted thing</h2>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>Model.Thing.Id</dt>
            <dd>@Model.Thing.Id</dd>
            <dt>Model.Thing.Color</dt>
            <dd>@Model.Thing.Color</dd>
            <dt>Model.Thing.Email</dt>
            <dd>@Model.Thing.Email</dd>
        </dl>
    </div>
    @if (Model.HasErrors)
    {
        <div>
            @foreach (var errorMessage in Model.ValidationErrors)
            {
                <div class="alert alert-danger" role="alert">@errorMessage</div>
            }
        </div>
    }
}
